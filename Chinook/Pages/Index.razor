@page "/"
@attribute [Authorize]

@using Chinook.Services;
@using Chinook.Models
@using Microsoft.EntityFrameworkCore

@inject ArtistService _artistService;

<PageTitle>Index</PageTitle>

<h1>Artists</h1>
<input @oninput="Search" placeholder="Search..." class="p-3"/>

@if (Artists == null)
{
    <Loading />
}
else
{
    <table class="table table-striped table-hover table-sm">
        <thead>
            <tr>
                <th>Name</th>
                <th>Number of albums</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var artist in Artists)
            {
                <tr>
                    <td><a href="Artist/@artist.ArtistId">@artist.Name</a></td>
                    <td>@artist.Albums.Count()</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Artist> Artists = new();

    protected override async Task OnInitializedAsync() {
        await InvokeAsync(StateHasChanged);
        Artists = await _artistService.GetArtists();
    }

    protected async void Search(Microsoft.AspNetCore.Components.ChangeEventArgs args)
    {
        Artists = await _artistService.GetArtistsByName((string)args.Value!);
    }
}
